<h1>Welcome, <%=@user.username%> </h1>


<% if @concerts.empty? %>
<h3>You don't have any concerts yet! <a href="/new-concert">Create a new concert</a></h3>
<% else
@user.concerts.each do |concert| %>
<ul>
  <li>
    <b><%=concert.artist.name%></b> at <b><%=concert.venue.name%></b> on <b><%=concert.date%></b>
  </li>
</ul>
<%end%>
<%end%>
